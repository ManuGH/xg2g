# xg2g Monitoring Stack Configuration
# Copy to .env and adjust values

# ============================================================================
# Grafana Settings (REQUIRED)
# ============================================================================
GRAFANA_PASSWORD=changeme123

# ============================================================================
# xg2g Core Settings (REQUIRED)
# ============================================================================
XG2G_OWI_BASE=http://192.168.1.100
XG2G_BOUQUET=Favourites

# OpenWebIF Authentication (if required)
XG2G_OWI_USER=root
XG2G_OWI_PASS=yourpassword

# ============================================================================
# EPG Settings
# ============================================================================
XG2G_EPG_ENABLED=true
XG2G_EPG_DAYS=7

# ============================================================================
# HDHomeRun Emulation (v1.4.0)
# ============================================================================
XG2G_HDHR_ENABLED=true
XG2G_HDHR_FRIENDLY_NAME=xg2g Monitoring
XG2G_HDHR_DEVICE_ID=XG2G1234

# ============================================================================
# Audio Transcoding (Optional)
# ============================================================================
# Enable if you experience audio delay in Jellyfin/Plex
XG2G_ENABLE_AUDIO_TRANSCODING=false

# ============================================================================
# Advanced Settings
# ============================================================================
# Picon base URL (optional)
XG2G_PICON_BASE=

# ============================================================================
# Monitoring Stack Ports
# ============================================================================
# xg2g:       8080 (HTTP API), 9090 (Metrics), 1900/udp (SSDP)
# Grafana:    3000
# Prometheus: 9091
# AlertMgr:   9093
