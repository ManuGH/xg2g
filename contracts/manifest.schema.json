{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UI Consumption Manifest Schema",
  "type": "object",
  "required": [
    "entries"
  ],
  "properties": {
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "endpoint",
          "fieldPath",
          "category",
          "component",
          "rationale",
          "introducedIn"
        ],
        "properties": {
          "endpoint": {
            "type": "string"
          },
          "fieldPath": {
            "type": "string"
          },
          "category": {
            "enum": [
              "normative",
              "legacy",
              "forbidden",
              "telemetry"
            ]
          },
          "component": {
            "type": "string"
          },
          "rationale": {
            "type": "string",
            "minLength": 5
          },
          "introducedIn": {
            "type": "string"
          },
          "sunsetIn": {
            "type": "string"
          }
        }
      }
    }
  }
}