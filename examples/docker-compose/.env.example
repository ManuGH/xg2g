# xg2g Umgebungsvariablen
# Kopiere diese Datei und passe die Werte an

# === PFLICHTFELDER ===
# Base URL deines OpenWebIF Receivers (VU+, Enigma2, etc.)
XG2G_OWI_BASE=http://192.168.1.100

# Name oder ID des Bouquets (z.B. "Favourites", "1:7:1:0:0:0:0:0:0:0:FROM BOUQUET")
XG2G_BOUQUET=Favourites

# Datenverzeichnis im Container
XG2G_DATA=/data

# Listen-Adresse
XG2G_LISTEN=:8080


# === OPTIONAL: XMLTV GENERIERUNG ===
# Wenn gesetzt, wird xmltv.xml generiert
XG2G_XMLTV=xmltv.xml


# === OPTIONAL: PICON KONFIGURATION ===
# Base URL für Picon-Bilder (Channel-Logos)
# XG2G_PICON_BASE=http://192.168.1.100/picon


# === OPTIONAL: FUZZY MATCHING ===
# Maximale Levenshtein-Distanz für EPG Name-Matching (0-10)
XG2G_FUZZY_MAX=2


# === OPTIONAL: STREAM PORT ===
# Port für OpenWebIF Streams (Standard: 8001)
# XG2G_STREAM_PORT=8001


# === OPTIONAL: PROMETHEUS METRIKEN ===
# Listen-Adresse für Prometheus Metriken (leer = deaktiviert)
XG2G_METRICS_LISTEN=:9090


# === OPTIONAL: RETRY-KONFIGURATION ===
# Timeout pro Request in Millisekunden (1000-60000)
XG2G_OWI_TIMEOUT_MS=10000

# Maximale Anzahl Wiederholungsversuche (0-10)
XG2G_OWI_RETRIES=3

# Basis Backoff-Verzögerung in Millisekunden (100-5000)
XG2G_OWI_BACKOFF_MS=500

# Maximale Backoff-Verzögerung in Millisekunden (500-30000)
XG2G_OWI_MAX_BACKOFF_MS=2000
